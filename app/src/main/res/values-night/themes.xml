<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubUserApp" parent="Theme.MaterialComponents">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDarkMode</item>
        <item name="colorPrimaryVariant">@color/primaryLightDarkMode</item>
        <item name="colorOnPrimary">@color/primaryDarkMode</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="colorOnSecondary">@color/primaryDarkMode</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="appBarLayoutStyle">@style/AppBarBackground</item>
        <item name="toolbarStyle">@style/ToolbarTheme</item>
        <item name="civ_border_color">@color/primaryLightDarkMode</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="tabStyle">@style/TabBackground</item>
    </style>

    <style name="AppBarMainBackground">
        <item name="android:background">@color/primaryDarkMode</item>
    </style>

    <style name="BackgroundHeader">
        <item name="android:background">@color/primaryDarkMode</item>
    </style>

    <style name="TabBackground" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/primaryLightDarkMode</item>
    </style>

    <style name="AppBarBackground" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/onPrimaryDarkMode</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primaryDarkMode</item>
    </style>

    <style name="TextContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextContent.ColorItem">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TextContent.ColorItem.Row">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="TextInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextInfo.ItemColor">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TextInfo.ItemColor.Center">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextInfo.ItemColor.Center.Field">
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>

    <style name="ItemIconImage">
        <item name="tint">@color/primaryTextColor</item>
    </style>

</resources>